<h2>Edit User</h2>

<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.submit %>
<% end %>

<%= form_for @user, method: :delete do |f| %>
  <%= f.submit "Delete User", class: "delete" %>
<% end %>
